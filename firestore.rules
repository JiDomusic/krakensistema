rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Colección de reparaciones
    match /reparaciones/{documento} {
      // Admins pueden hacer CRUD completo usando Custom Claims o emails específicos
      allow read, write, create, update, delete: if request.auth != null && 
        (request.auth.token.admin == true || 
         request.auth.token.email == "equiz.rec@gmail.com" || 
         request.auth.token.email == "krakenserviciotecnico@gmail.com");
      
      // Clientes pueden leer sin autenticación para consultar por fecha y DNI
      allow read: if request.auth == null;
    }
    
    // Colección de admins - solo para admins autenticados
    match /admins/{userId} {
      allow read, write: if request.auth != null && 
        (request.auth.token.admin == true || 
         request.auth.token.email == "equiz.rec@gmail.com" || 
         request.auth.token.email == "krakenserviciotecnico@gmail.com");
    }
  }
}