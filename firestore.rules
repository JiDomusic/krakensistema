rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Colecci贸n de reparaciones
    match /reparaciones/{documento} {
      // Admins pueden hacer CRUD completo (crear, leer, actualizar, eliminar)
      allow read, write, create, update, delete: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.admins == true;
      
      // Clientes pueden leer sin autenticaci贸n para consultar por fecha y DNI
      allow read: if request.auth == null;
    }
    
    // Colecci贸n de admins
    match /admins/{userId} {
      // Admins pueden leer y escribir en la colecci贸n de admins
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.admins == true;
    }
  }
}